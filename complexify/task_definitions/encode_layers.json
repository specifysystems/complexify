{
    "identifier": "encode_layers",
    "inputs": [
        {
            "name": "encode_method",
            "data_type": "StringDataType",
            "required": false,
            "prefix": "-m ",
            "choices": ["biogeo", "presence_absence", "largest_class", "mean_value"]
        },
        {
            "name": "min_coverage",
            "data_type": "FloatDataType",
            "required": false,
            "prefix": "--min_coverage="
        },
        {
            "name": "min_presence",
            "data_type": "StringDataType",
            "required": false,
            "prefix": "--min_presence="
        },
        {
            "name": "max_presence",
            "data_type": "StringDataType",
            "required": false,
            "prefix": "--max_presence="
        },
        {
            "name": "shapegrid_filename",
            "data_type": "FileDataType",
            "required": true,
        },
        {
            "name": "layer",
            "data_type": "StringDataType",
            "required": true,
            "prefix": "-l ",
			"nargs": "*"
        },
    ],
    "outputs": [
        {
            "name": "out_matrix_filename",
            "data_type": "FileDataType",
            "required": true,
        },
    ],
    "command": "encode_layers {options} {out_matrix_filename.name}"
}